<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.drss" >
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.drss.activity.LoginActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activity.GuideViewPagerActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.drss.activity.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.example.drss.activity.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.drss.activity.RecipeActivity"
            android:label="@string/title_activity_recipe" >
        </activity>
        <activity android:name="com.example.drss.activity.WelcomeActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.drss.activity.FoodDetailsActivity"
            android:label="@string/title_activity_food_details" >
        </activity>
        <activity
            android:name="com.example.drss.activity.SearchActivity"
            >
        </activity>
    </application>

</manifest>
